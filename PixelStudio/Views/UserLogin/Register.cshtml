@model PixelStudio.Models.RegisterSystem

@{
    ViewBag.Title = "Register";
}

<h2>Зарагестрировать учётную запись</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Система регистрации</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <span class="control-label col-md-2">Имя пользователя:</span>
       
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Фамилия пользователя:</span>
        @*<label class="control-label col-md-2">Surname</label>*@
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserSurname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserSurname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span class="control-label col-md-2">Номер телефона:</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <span class="control-label col-md-2">Ел.почта:</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <span class="control-label col-md-2">Пароль:</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-success" />
        </div>
    </div>
    @if (ViewBag.Name != null)
    {
        <h3 class="alert-success" style="padding:20px;">@ViewBag.Name</h3>
    }

    @*<h3 class="alert alert-success">@Html.ViewData["Message"]</h3>*@

</div>
}

<div>
    @Html.ActionLink("Назад", "Enter", "UserLogin", new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
