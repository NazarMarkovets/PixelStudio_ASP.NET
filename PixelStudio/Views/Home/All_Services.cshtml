@model IEnumerable<PixelStudio.Models.PhotoService>

@{
    ViewBag.Title = "All Services";
}

<h2>Все услуги</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table" style="border:dashed">
    <tr style="border:dashed">
        @*<th>
            @Html.DisplayNameFor(model => model.ServiceId)
        </th>*@
        <th>
            Название услуги:
        </th>
        <th>
            Формат фото:
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.ColorType)
        </th>*@
        <th>
            Цена за 1 шт.
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Image)
        </th>*@
        <th> </th>
        <th ></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.ServiceId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhotoFormat)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>*@
        @*<td>
            @Html.DisplayFor(modelItem => item.ColorType)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <img src="@Url.Content(item.Image)" width="200" height="200" />
        </td>
        <td>
            @Html.ActionLink("Купить", "MakeOrder", new { id=item.ServiceId}, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Подробнее", "Service_Details", new { id=item.ServiceId }, new { @class = "btn btn-info" }) 
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("На главную", "Home", "Home", null, new { @class = "btn btn-default" })
</div>
