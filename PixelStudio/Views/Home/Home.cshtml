<style>
    
</style>

<div style="display:flex">
    <div style="height:500px; width:60%; text-align:center;">
        <div id="carousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/image/инстабук.jpg" style="height:500px; width:500px" />
                    <div class="container">
                        <div class="carousel-caption"></div>
                    </div>
                </div>
                <div class="item">
                    <img src="~/image/рамка.jpg" style="height:500px; width:500px" />
                    <div class="container">
                        <div class="carousel-caption"></div>
                    </div>
                </div>
                <div class="item">
                    <img src="~/image/Календарь.jpg" style="height:500px; width:500px" />
                    <div class="container">
                        <div class="carousel-caption"></div>
                    </div>
                </div>
            </div>
        </div>
        <div style="height:auto">
            <a style="height:75.3%" href="#carousel" class="left carousel-control" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
        </div>
        <div style="height:auto">
            <a style="height:75.3%" href="#carousel" class="right carousel-control" data-slide="next">
                <span class="icon-next"></span>
            </a>
        </div>



    </div>
    
    <div>
        <h2 align="center">Home page</h2>
        <div class="col-12 col-md-3 col-xl-2 bd-sidebar" style="margin-top: 20px; width:100%;">

            <form class="bd-search d-flex align-items-center">
