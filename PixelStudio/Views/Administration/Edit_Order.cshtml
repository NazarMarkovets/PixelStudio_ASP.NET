@model PixelStudio.Models.Order

@{
    ViewBag.Title = "Edit_Order";
}

<h2>Edit_Order</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Номер заказа
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderID)
        </dd>

        <dt>
            Заказчик
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserInfo)
        </dd>

        <dt>
            услуга
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceDesc)
        </dd>

        <dt>
            Статус
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StatusDesc)
        </dd>

        <dt>
            Цена
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>

        @*<dt>
            Конечная цена
        </dt>

        <dd>
            @Html.DisplayFor(model => model.allPrice)
        </dd>*@
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>PhotoService</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <span class="control-label col-md-2">Изменить статус</span>
                <div class="col-md-10">
                    @Html.RadioButton("StatusID", 2) В обработке
                    @Html.RadioButton("StatusID", 3) Ждёт клиента
                    @Html.RadioButton("StatusID", 4) Отменён
                    @Html.RadioButton("StatusID", 5) Выполнен

                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }
</div>